{
  "id": "multiple-choice-basic",
  "name": "Multiple Choice (Basic)",
  "description": "Standard multiple choice question with 4 options",
  "type": "multiple-choice",
  "schema": {
    "question": {
      "type": "string",
      "required": true,
      "description": "The main question text"
    },
    "questionLanguage": {
      "type": "string",
      "enum": [
        "de",
        "es",
        "en"
      ],
      "required": false,
      "description": "Language of the question"
    },
    "questionAudio": {
      "type": "string",
      "required": false,
      "description": "Audio file path for question (e.g., 'spanish/pregunta.mp3')"
    },
    "options": {
      "type": "array",
      "required": true,
      "minItems": 2,
      "maxItems": 6,
      "description": "Answer options (2-6 choices)"
    },
    "optionsLanguage": {
      "type": "string",
      "enum": [
        "de",
        "es",
        "en"
      ],
      "required": false,
      "description": "Language of the options"
    },
    "optionsAudio": {
      "type": "array",
      "required": false,
      "description": "Audio file paths for each option (same length as options)"
    },
    "correctAnswer": {
      "type": "number",
      "required": true,
      "description": "Index of the correct answer (0-based)"
    },
    "explanation": {
      "type": "string",
      "required": false,
      "description": "Explanation shown after answering"
    },
    "hint": {
      "type": "string",
      "required": false,
      "description": "Optional hint for the student"
    }
  },
  "audioConfig": {
    "autoPlay": {
      "onLoad": [
        "questionAudio"
      ],
      "onReveal": [
        "correctAnswerAudio"
      ]
    },
    "buttons": {
      "question": {
        "show": true,
        "field": "questionAudio"
      }
    }
  },
  "metadata": {
    "difficulty": [
      "easy",
      "medium",
      "hard"
    ],
    "tags": [
      "array"
    ],
    "estimatedTime": "number (seconds)",
    "points": "number"
  },
  "examples": [
    {
      "question": "Was ist 2 + 2?",
      "questionLanguage": "de",
      "options": [
        "3",
        "4",
        "5",
        "6"
      ],
      "optionsLanguage": "de",
      "correctAnswer": 1,
      "explanation": "2 + 2 = 4",
      "hint": "ZÃ¤hle auf deinen Fingern"
    }
  ]
}
