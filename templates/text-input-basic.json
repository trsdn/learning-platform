{
  "id": "text-input-basic",
  "name": "Text Input (Basic)",
  "description": "Type the correct answer",
  "type": "text-input",
  "schema": {
    "question": {
      "type": "string",
      "required": true,
      "description": "The main question text"
    },
    "questionLanguage": {
      "type": "string",
      "enum": [
        "de",
        "es",
        "en"
      ],
      "required": false,
      "description": "Language of the question"
    },
    "questionAudio": {
      "type": "string",
      "required": false,
      "description": "Audio file path for question"
    },
    "correctAnswer": {
      "type": "string",
      "required": true,
      "description": "The correct answer text"
    },
    "correctAnswerLanguage": {
      "type": "string",
      "enum": [
        "de",
        "es",
        "en"
      ],
      "required": false,
      "description": "Language of the correct answer"
    },
    "correctAnswerAudio": {
      "type": "string",
      "required": false,
      "description": "Audio file path for correct answer"
    },
    "alternatives": {
      "type": "array",
      "required": false,
      "description": "Alternative correct answers"
    },
    "caseSensitive": {
      "type": "boolean",
      "required": false,
      "description": "Whether the answer is case sensitive"
    },
    "explanation": {
      "type": "string",
      "required": false,
      "description": "Explanation shown after answering"
    },
    "hint": {
      "type": "string",
      "required": false,
      "description": "Optional hint for the student"
    }
  },
  "audioConfig": {
    "autoPlay": {
      "onLoad": [
        "questionAudio"
      ],
      "onReveal": [
        "correctAnswerAudio"
      ]
    },
    "buttons": {
      "question": {
        "show": true,
        "field": "questionAudio"
      }
    }
  },
  "metadata": {
    "difficulty": [
      "easy",
      "medium",
      "hard"
    ],
    "tags": [
      "array"
    ],
    "estimatedTime": "number (seconds)",
    "points": "number"
  },
  "examples": [
    {
      "question": "Wie sagt man 'Danke' auf Spanisch?",
      "questionLanguage": "de",
      "correctAnswer": "Gracias",
      "correctAnswerLanguage": "es",
      "correctAnswerAudio": "spanish/greetings/gracias.mp3",
      "alternatives": [
        "gracias"
      ],
      "caseSensitive": false,
      "explanation": "'Gracias' bedeutet 'Danke' auf Spanisch.",
      "hint": "Es beginnt mit 'Gra...'"
    }
  ]
}
